<Window x:Class="ICOP_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ICOP_3"
        mc:Ignorable="d"
        Title="ICOP 3 - Daeyoung Electronics Vina" Height="1050" Width="1920" Closing="Window_Closing" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" WindowStartupLocation="CenterScreen">
    <Window.Resources>

        <Storyboard x:Key="OpenMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-1920,0,1920,0" To="0,0,0,0" DecelerationRatio="0.9" Duration="0:0:0.25" RepeatBehavior="1x"/>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-1920,0,1920,0" DecelerationRatio="0.9" Duration="0:0:0.25" RepeatBehavior="1x"/>
        </Storyboard>

        <Storyboard x:Key="OpenChart">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,330,0,0" To="0,-600,0,0" DecelerationRatio="0.9" Duration="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Key="CloseChart">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-600,0,0" To="0,330,0,0" DecelerationRatio="0.9" Duration="0:0:0.5"/>
        </Storyboard>

        <ControlTemplate x:Key="ButtonElipse" TargetType="{x:Type Button}">
            <Border x:Name="border" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter" 
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              Content="{TemplateBinding Content}"
                              ContentStringFormat="{TemplateBinding ContentStringFormat}"
                              Focusable="False"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              Margin="{TemplateBinding Padding}"
                              RecognizesAccessKey="True"
                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" TargetName="border" Value="0,0,0,2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" TargetName="border" Value="#FFC4E5F6"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="#FF2C628B"/>
                </Trigger>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                    <Setter Property="Background" TargetName="border" Value="#FFBCDDEE"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="#FF245A83"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" TargetName="border" Value="#FFF4F4F4"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="#FFADB2B5"/>
                    <Setter Property="Foreground" Value="#FF838383"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="VTMDataGridCellData" TargetType="{x:Type DataGridCell}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14.5"/>
            <Setter Property="BorderBrush" Value="#FF918C8C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Setter Property="Background" Value="#FF0E1C36"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Height" Value="30"/>
            <!--<Setter Property="TextBox.FontWeight" Value="Bold"/>-->
            <Style.Triggers >

                <DataTrigger Binding="{Binding Path=Skip}" Value="True">
                    <Setter Property="Background" Value="#FF273627"/>
                </DataTrigger>
                <Trigger Property="IsSelected" Value="True" >
                    <Setter Property="Background" Value="#9EFFBA"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <DataTrigger Binding="{Binding Result}" Value="OK" >
                    <Setter Property="Background" Value="#006400"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="NG" >
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="TESTING" >
                    <Setter Property="Background" Value="Yellow"/>
                    <Setter Property="TextBox.Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Skip}" Value="True">
                    <Setter Property="Foreground" Value="Gray"/>
                </DataTrigger>

            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="flatButton" TargetType="Button">
            <Border x:Name="border" CornerRadius="5" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0">
                <ContentPresenter x:Name="contentPresenter"
                              ContentTemplate="{Binding ContentTemplate}"
                              Content="{TemplateBinding Content}"
                              Cursor="Hand"
                              ContentStringFormat="{Binding ContentStringFormat}"></ContentPresenter>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" TargetName="border" Value="2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="BorderThickness" TargetName="border" Value="4"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>


        <ControlTemplate x:Key="flatTogleButton" TargetType="ToggleButton">
            <Border x:Name="border" CornerRadius="5" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0">
                <ContentPresenter x:Name="contentPresenter"
                              ContentTemplate="{Binding ContentTemplate}"
                              Content="{TemplateBinding Content}"
                              Cursor="Hand"
                              ContentStringFormat="{Binding ContentStringFormat}"></ContentPresenter>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" TargetName="border" Value="2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="BorderThickness" TargetName="border" Value="4"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="flatTogleButtonn" TargetType="ToggleButton">
            <Border x:Name="border" CornerRadius="5" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0">
                <ContentPresenter x:Name="contentPresenter"
                              ContentTemplate="{Binding ContentTemplate}"
                              Content="{TemplateBinding Content}"
                              Cursor="Hand"
                              ContentStringFormat="{Binding ContentStringFormat}"></ContentPresenter>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="BorderThickness" TargetName="border" Value="6"/>
                </Trigger>

            </ControlTemplate.Triggers>
        </ControlTemplate>


